Q137: Create an enum for user roles (ADMIN, USER, GUEST) and display messages based on role.

/*
Sample Test Cases:
Input 1:
GUEST
Output 1:
Welcome Guest!

*/
#include <stdio.h>

enum UserRole {
    ADMIN,
    USER,
    GUEST
};

void display_welcome_message(enum UserRole role) {
    switch (role) {
        case ADMIN:
            printf("Welcome Administrator! Full access granted.\n");
            break;
        case USER:
            printf("Welcome User! Limited access granted.\n");
            break;
        case GUEST:
            printf("Welcome Guest!\n");
            break;
        default:
            printf("Unknown role.\n");
            break;
    }
}

int main() {
    enum UserRole current_role = GUEST;
    display_welcome_message(current_role);
    return 0;
}